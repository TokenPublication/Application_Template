<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:clickable="true"
        android:focusable="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/midLine"
        android:background="@color/black"/>

    <android.support.constraint.Guideline
        android:id="@+id/midLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.50"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/ic_anim"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="110dp"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/warning"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Warning"
        android:textSize="24sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/ic_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/confirmationLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/midLine"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="#171717">

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Are you sure?"
            android:textSize="24sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="46dp"/>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="2dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="#5A5A5A"/>

        <ImageView
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/viewDivider"
            app:layout_constraintBottom_toBottomOf="@+id/viewDivider"
            app:layout_constraintStart_toEndOf="@+id/viewDivider"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/green_tick" />

        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toTopOf="@+id/viewDivider"
            app:layout_constraintBottom_toBottomOf="@+id/viewDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewDivider"
            android:src="@drawable/red_x" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>